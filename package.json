{
  "name": "@bemedev/upgrade-npm-package",
  "version": "0.1.1",
  "description": "Enhanced NPM Package Upgrader with Rollback Support - TypeScript CLI tool for intelligent, dependency-aware package upgrades",
  "author": {
    "email": "bri_lvi@icloud.com",
    "name": "chlbri",
    "url": "https://bemedev.vercel.app"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/chlbri/upgrade-npm-package"
  },
  "license": "MIT",
  "type": "module",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "module": "lib/index.js",
  "maintainers": [
    {
      "email": "bri_lvi@icloud.com",
      "name": "chlbri",
      "url": "https://bemedev.vercel.app"
    }
  ],
  "contributors": [
    {
      "email": "bri_lvi@icloud.com",
      "name": "chlbri",
      "url": "https://bemedev.vercel.app"
    }
  ],
  "keywords": [
    "npm",
    "package",
    "upgrade",
    "dependency",
    "rollback",
    "cli",
    "typescript",
    "semver",
    "package-manager",
    "automation"
  ],
  "bin": "./lib/cli/cli.cjs",
  "files": [
    "lib",
    "public"
  ],
  "engines": {
    "node": ">=22"
  },
  "scripts": {
    "build": "pnpm rm:lib && pnpm run rollup",
    "ci": "pnpm run config:off && pnpm run lint && pnpm run test && pnpm run prettier && pnpm run p-q",
    "ci:admin": "pnpm run rm && pnpm run upgrade && pnpm run ci",
    "clean": "pnpm run rm && pnpm run config",
    "config": "pnpm install",
    "config:off": "pnpm run config --offline",
    "eslint": "eslint \"{src/**/*,App}.{ts,tsx}\"",
    "lint": "pnpm run prettier && pnpm run eslint --fix",
    "lint:watch": "onchange --await-write-finish 5500 \"**/*\" -- pnpm run lint",
    "p-q": "pretty-quick",
    "posttest": "pnpm run size",
    "prepare": "husky",
    "prepublishOnly": "",
    "prettier": "prettier --write \"src/**/*.{ts,tsx}\"",
    "pretest": "pnpm run build",
    "rinit": "pnpm run rm && pnpm run config",
    "rinit:off": "pnpm run rm && pnpm run config:off",
    "rimraf": "pnpx rimraf -rf",
    "rm": "pnpm run rimraf -- node_modules pnpm-lock.yaml",
    "rm:lib": "pnpm run rimraf -- lib",
    "rollup": "rollup -c",
    "size": "size-limit",
    "test": "pnpm run test:coverage --no-coverage",
    "test:coverage": "vitest run",
    "test:watch": "vitest",
    "typings": "app-typings generate",
    "typings:watch": "pnpm run typings --watch",
    "upgrade": "pnpm upgrade --latest",
    "upgrade:all": "pnpm upgrade --latest"
  },
  "size-limit": [
    {
      "path": "lib/*.js",
      "limit": "10 KB"
    },
    {
      "path": "lib/*.cjs",
      "limit": "10 KB"
    }
  ],
  "devDependencies": {
    "@bemedev/app-cli": "0.1.7",
    "@bemedev/fsf": "0.8.0",
    "@bemedev/rollup-config": "0.2.2",
    "@bemedev/sleep": "0.1.2",
    "@bemedev/vitest-alias": "0.0.3",
    "@bemedev/vitest-exclude": "0.1.1",
    "@bemedev/vitest-extended": "1.5.3",
    "@eslint/eslintrc": "3.3.1",
    "@eslint/js": "9.36.0",
    "@size-limit/file": "11.2.0",
    "@types/edit-json-file": "1.7.3",
    "@types/node": "24.6.0",
    "@types/semver": "7.7.1",
    "@typescript-eslint/eslint-plugin": "8.45.0",
    "@typescript-eslint/parser": "8.45.0",
    "@vitest/coverage-v8": "3.2.4",
    "eslint": "9.36.0",
    "glob": "11.0.3",
    "globals": "16.4.0",
    "husky": "9.1.7",
    "nanoid": "5.1.6",
    "onchange": "7.1.0",
    "prettier": "3.6.2",
    "pretty-quick": "4.2.2",
    "rollup": "4.52.3",
    "size-limit": "11.2.0",
    "ts-node": "10.9.2",
    "tslib": "2.8.1",
    "tsx": "4.20.6",
    "typescript": "5.9.2",
    "vitest": "3.2.4",
    "yaml": "2.8.1"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "esbuild"
    ]
  },
  "dependencies": {
    "@bemedev/app-ts": "1.2.0",
    "axios": "1.12.2",
    "cmd-ts": "0.14.2",
    "edit-json-file": "1.8.1",
    "execa": "9.6.0",
    "semver": "7.7.2",
    "valibot": "1.1.0"
  },
  "ts-node": {
    "esm": true
  }
}
